import java.util.Scanner;

public class LongWords {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        while(n-->0)
        {
            String s=sc.next();
            if(s.length()>10)
            {
                int s1=s.length()-2;
                System.out.println(s.charAt(0)+""+s1+""+s.charAt(s.length()-1));
            }
            else
            {
                System.out.println(s);
            }
        }
    }
}
